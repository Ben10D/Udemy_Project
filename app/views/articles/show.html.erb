<%= form_with scope: :article, url:articles_path, local: true do |form| %>
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
<%= form_with model: @article, local: true do |form| %>
<p>
  <%= form.label :commenter %>
  <%= form.text_field :commenter, placeholder: "Enter your name" %>
</p>
<p>
  <%= form.label :comment%>
  <%= form.text_area :comment, placeholder: "Add your comment"%>
</p>
<p>
  <%= form.submit "Add your comment" %>
</p><% end %>
<%= link_to 'Edit',edit_article_path(@article) %>
<%= link_to 'Back', articles_path %>
<% end %>